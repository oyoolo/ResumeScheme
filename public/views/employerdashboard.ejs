<%- include ('./partials/messages'); -%>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade " id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    </div>
    <div class="tab-pane fade show active" id="pills-addjob" role="tabpanel" aria-labelledby="pills-addjob-tab" style="max-height: 800px; 
        margin-bottom: 10px;
        overflow:scroll;
        -webkit-overflow-scrolling: touch;">

        <form action="/employer/post_job" method="POST">

            <div class="row">
                <div class="col-sm">
                    <input type="text" class="form-control" id="job_title" name="job_title" placeholder="Job Title"
                        value="<%= typeof job_title != 'undefined' ? job_title : '' %>">
                </div>
                <div class="col-sm">
                    <input type="text" class="form-control" id="job_type" name="job_type" placeholder="Job Type"
                        value="<%= typeof job_type!= 'undefined' ? job_type : '' %>">
                </div>
                <div class="col-sm"">
                            <input type=" text" class="form-control" id=" job_category" name="job_category"
                    placeholder="Job Category" value="<%= typeof job_category != 'undefined' ? job_category : '' %>">
                </div>
                <div class="col-sm">
                    <input type="text" class="form-control" id="job_locations" name="job_locations"
                        placeholder="Location(s)"
                        value="<%= typeof job_locations != 'undefined' ? job_locations : '' %>">
                </div>
                <div class="col-sm">
                    <input type="date" class="form-control" id="job_deadline" name="job_deadline" placeholder="Deadline"
                        value="<%= typeof job_deadline!= 'undefined' ? job_deadline : '' %>">
                </div>
            </div>
            <br>

            <div class="form-group">
                <label for="job_description">Job Description</label>
                <textarea class="form-control editable" id="job_description" name="job_description" rows="10"
                    placeholder="Job Description"><%= typeof job_description!= 'undefined' ? job_description : '' %></textarea>
            </div>

            <div class="form-group">
                <label for="job_requirements">Job Requirements</label>
                <textarea class="form-control editable" id="job_requirements" name="job_requirements" rows="10"
                    placeholder="Job Requirements"><%= typeof job_requirements != 'undefined' ? job_requirements : '' %></textarea>
            </div>

            <div class="form-group">

                <textarea class="form-control " id="job_keywords" name="job_keywords" rows="1"
                    placeholder="Enter Keywords"><%= typeof job_keywords != 'undefined' ? job_keywords : '' %></textarea>
            </div>
            <button type="submit" class="btn btn-primary ">
                <span>Post Job</span>
            </button>
        </form>
    </div>
