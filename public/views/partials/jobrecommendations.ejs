<% let index = 0; if(typeof jobs != 'undefined'){ %> <% jobs.forEach(function(job) { %>
    
<div class="list-group-item list-group-item-action flex-column align-items-start ">
    <div class="card h-200" href="#" style="width: auto; ">
        <!-- <div class="card-header">
        </div> -->
        <div class="card-body" data-toggle="modal" data-target="#exampleModal<%= index%>">
            <h5 class="card-title"><%= job.job_type %> <%= job.job_title %> <small> ( Match % )</small></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= job.company_name %></h6>
            <a href="/jobseeker/apply/<%= job.id %> " class="card-link"> Quick Apply</a>
            <a href="#" class="card-link"> Save</a>
        </div>
        <!-- <div class="card-footer text-muted text-right">
        </div> -->
    </div>
</div>
<div class="modal fade" id="exampleModal<%= index%>" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><%= job.job_title  %> at <%= job.company_name %> </h5>
                <small> ( Match % )</small>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h6 class="card-subtitle mb-2 text-muted"><%= job.job_type %></h6>
                <h6><%= job.job_locations %> </h6>
                <h6>Description</h6>
                <p class="card-text"><%= job.job_description %></p>
                <h6>Requirements</h6>
                <p class="card-text"><%= job.job_requirements %></p>
            </div>
            <div class="modal-footer">
                <a href="/jobseeker/apply/<%= job.id %> " class="card-link btn btn-primary">Apply</a>
                <a href="#" class="card-link btn btn-secondary">Save</a>
            </div>
        </div>
    </div>
</div>
<% index++ ;%>
<% }); %> <% } %>